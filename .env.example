# Server Configuration
PORT=5000
NODE_ENV=development
CLIENT_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/cybersec_portfolio

# Authentication
JWT_SECRET=your-super-secret-jwt-key-replace-with-strong-random-string
JWT_EXPIRE=30d

# Security Configuration
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Email Configuration (for contact forms)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes

# Admin Configuration
ADMIN_EMAIL=admin@cybersec-portfolio.com
ADMIN_PASSWORD=SecureAdminPassword123!

# Social Media Links
LINKEDIN_URL=https://linkedin.com/in/yourprofile
GITHUB_URL=https://github.com/yourusername
TWITTER_URL=https://twitter.com/yourhandle

# Analytics
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID

# Production Only
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem
# DOMAIN=yourdomain.com
